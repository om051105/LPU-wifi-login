{
  "manifest_version": 3,
  "name": "LPU WiFi Auto-Connect",
  "version": "1.0",
  "author": "Om",
  "description": "Automatically connects to LPU WiFi by filling credentials.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LPU WiFi Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "https://internet.lpu.in/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}